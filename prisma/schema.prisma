generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum Gender {
  MALE
  FEMALE
}

model User {
  id               Int       @id @default(autoincrement())
  username         String    @unique @db.VarChar(30)
  email            String    @db.VarChar(254)
  phoneNumber      String?   @map("phone_number") @db.VarChar(18)
  profilePhotoUrl  String    @default("https://i.ibb.co/MhtSNNb/fakegram-user-avatar.jpg") @map("profile_photo_url")
  fullDateBirth    DateTime? @map("full_date_birth")
  role             Role      @default(USER)
  aboutMe          String?   @map("about_me") @db.VarChar(150)
  bio              String?   @db.VarChar(30)
  websiteUrl       String?   @map("website_url")
  gender           Gender?
  registrationDate DateTime  @default(now()) @map("registration_date")
  lastLoginDate    DateTime  @default(now()) @map("last_login_date")
  isVerified       Boolean   @default(false) @map("is_verified")
  isPrivate        Boolean   @default(false) @map("is_private")
  emailVerified    Boolean   @default(false) @map("email_verified")

  @@index([username])
}
